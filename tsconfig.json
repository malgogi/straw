{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "dist",
    "lib": ["es7"]
  },
  "include": [
    "./packages/**/*.ts",
    "./packages/**/*.d.ts",
    "./packages/**/*.json"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
